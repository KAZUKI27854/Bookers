<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @books.each do |book| %>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", books_path %></td>
      <td><%= link_to "Edit", books_path %></td>
      <td><%= link_to "Destroy", books_path %></td>
      <% end %>
    </tr>
  </tbody>
</table>